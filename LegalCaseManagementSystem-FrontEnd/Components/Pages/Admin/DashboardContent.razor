
@* Main dashboard content component *@

<main>
    <div class="head-title">
        <div class="left">
            <h1>Dashboard</h1>
            <ul class="breadcrumb">
                <li><a href="#">Dashboard</a></li>
                <li><i class='bx bx-chevron-right'></i></li>
                <li><a class="active" href="#">Home</a></li>
            </ul>
        </div>
        <a href="#" class="btn-download">
            <i class='bx bxs-cloud-download bx-fade-down-hover'></i>
            <span class="text">Get PDF</span>
        </a>
    </div>

    <ul class="box-info">
        @foreach (var stat in Stats)
        {
            <li>
                <i class='bx @stat.Icon'></i>
                <span class="text">
                    <h3>@stat.Value</h3>
                    <p>@stat.Label</p>
                </span>
            </li>
        }
    </ul>

    <div class="table-data">
        <div class="order">
            <div class="head">
                <h3>Recent Orders</h3>
                <i class='bx bx-search'></i>
                <i class='bx bx-filter'></i>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Date Order</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Orders)
                    {
                        <tr>
                            <td>
                                <img src="https://placehold.co/600x400/png">
                                <p>@order.User</p>
                            </td>
                            <td>@order.Date</td>
                            <td><span class="status @order.Status.ToLower()">@order.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="todo">
            <div class="head">
                <h3>Todos</h3>
                <i class='bx bx-plus icon'></i>
                <i class='bx bx-filter'></i>
            </div>
            <ul class="todo-list">
                @foreach (var todo in Todos)
                {
                    <li class="@(todo.IsCompleted ? "completed" : "not-completed")">
                        <p>@todo.Task</p>
                        <i class='bx bx-dots-vertical-rounded'></i>
                    </li>
                }
            </ul>
        </div>
    </div>
</main>

@code {
    private List<Stat> Stats = new()
    {
        new Stat { Icon = "bxs-calendar-check", Value = "1020", Label = "New Order", Color = "blue" },
        new Stat { Icon = "bxs-group", Value = "2834", Label = "Visitors", Color = "yellow" },
        new Stat { Icon = "bxs-dollar-circle", Value = "N$2543.00", Label = "Total Sales", Color = "orange" }
    };

    private List<Order> Orders = new()
    {
        new Order { User = "Micheal John", Date = "18-10-2021", Status = "Completed" },
        new Order { User = "Ryan Doe", Date = "01-06-2022", Status = "Pending" },
        new Order { User = "Tarry White", Date = "14-10-2021", Status = "Process" },
        new Order { User = "Selma", Date = "01-02-2023", Status = "Pending" },
        new Order { User = "Andreas Doe", Date = "31-10-2021", Status = "Completed" }
    };

    private List<Todo> Todos = new()
    {
        new Todo { Task = "Check Inventory", IsCompleted = true },
        new Todo { Task = "Manage Delivery Team", IsCompleted = true },
        new Todo { Task = "Contact Selma: Confirm Delivery", IsCompleted = false },
        new Todo { Task = "Update Shop Catalogue", IsCompleted = true },
        new Todo { Task = "Count Profit Analytics", IsCompleted = false }
    };

    private class Stat
    {
        public string Icon { get; set; } = string.Empty;
        public string Value { get; set; } = string.Empty;
        public string Label { get; set; } = string.Empty;
        public string Color { get; set; } = string.Empty;
    }

    private class Order
    {
        public string User { get; set; } = string.Empty;
        public string Date { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
    }

    private class Todo
    {
        public string Task { get; set; } = string.Empty;
        public bool IsCompleted { get; set; }
    }
}